{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["ESNext", "DOM"],
    "module": "Preserve",
    "skipLibCheck": true,

    /* Bundler mode */
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": false,
    "outDir": "dist",
    "verbatimModuleSyntax": true,

    /* Linting */
    "strict": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["packages/api/src", "packages/lexicon/src", "packages/lexicon/scripts", "packages/server/src"],
  "exclude": ["packages/api/lib", "packages/server/lib"]
}
