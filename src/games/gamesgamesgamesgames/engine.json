{
	"lexicon": 1,
	"id": "games.gamesgamesgamesgames.engine",
	"defs": {
		"main": {
			"type": "record",
			"description": "A game engine.",
			"key": "tid",
			"record": {
				"type": "object",
				"required": ["name"],
				"properties": {
					"name": { "type": "string" },
					"description": { "type": "string" },
					"companies": {
						"type": "array",
						"items": { "type": "string", "format": "at-uri" }
					},
					"platforms": {
						"type": "array",
						"items": { "type": "string", "format": "at-uri" }
					},
					"websites": {
						"type": "array",
						"items": {
							"type": "ref",
							"ref": "games.gamesgamesgamesgames.defs#website"
						}
					},
					"media": {
						"type": "array",
						"items": {
							"type": "ref",
							"ref": "games.gamesgamesgamesgames.defs#mediaItem"
						}
					},
					"createdAt": { "type": "string", "format": "datetime" }
				}
			}
		}
	}
}
